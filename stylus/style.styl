/*==============================
=            Media             =
==============================*/

@media screen and (max-width 750px)
  *
    transition 0s
  body
    padding 0px
    // background none
  .container
    padding 10px
    margin 0 auto
    width 100%
    min-width 600px
  .field-search
    font-size 1.2em
    padding 5px
    margin 22px -10px
  h1
    font-size 2.4em
  .donate
    font-size 1.1em
  .books
    padding 0px
  #scrollTop
    visibility hidden
  .book
    padding 10px
    margin 2px
    border-radius 0px
    &:hover
      box-shadow none
  .contacts
    min-width 400px
    opacity 1
  .purses
  // display flex
    li
      opacity 1
